---
import Footer from "@components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
  title?: string;
  theme?: string;
}

const { title = "FormHub", theme = "dark" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class={theme === "dark" ? "dark" : ""}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot name="header">
      <Header />
      <!--default header here -->
    </slot>
    <main>
      <slot />
    </main>
    <slot name="footer">
      <Footer />
    </slot>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  body {
    @apply m-0 flex flex-col h-screen dark:bg-slate-600 dark:text-white;
  }
  main {
    @apply flex-1;
  }
</style>
